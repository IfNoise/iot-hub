# Production environment configuration
NODE_ENV=production
PORT=3000

# Database Configuration - Production
DB_TYPE=postgres
DATABASE_HOST=your-production-db-host.com
DATABASE_PORT=5432
DATABASE_USER=iot_user_prod
DATABASE_PASSWORD=your_super_secure_production_password
DATABASE_NAME=iot_hub_prod
DB_SSL=true
DB_POOL_SIZE=15

# JWT Configuration - Production
JWT_SECRET=your-super-secret-production-key-with-64-chars-minimum-length

# Redis Configuration - Production
REDIS_URL=rediss://your-production-redis-host:6380
REDIS_ENABLED=true

# CORS - Production
CORS_CREDENTIALS=false
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting - Production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging - Production
LOG_LEVEL=error