{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/lib/infra/mqtt/**/*",
    "src/lib/mappers/device.mapper.ts",
    "src/lib/mappers/organization.mapper.ts"
  ],
  "references": [
    {
      "path": "../contracts/users/tsconfig.lib.json"
    },
    {
      "path": "../contracts/devices/tsconfig.lib.json"
    }
  ]
}
