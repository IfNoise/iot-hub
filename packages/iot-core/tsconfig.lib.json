{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs", // Явно CommonJS
    "moduleResolution": "node", // Соответствует CommonJS
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": ["node"],
    "paths": {} // Очищаем paths mapping для избежания конфликтов
  },
  "include": ["src/**/*.ts"],
  "references": [],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
