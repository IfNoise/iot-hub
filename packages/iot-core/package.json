{
  "name": "iot-core",
  "version": "0.0.3",
  "type": "commonjs",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "mqtt": "^5.13.0",
    "zod": "^3.25.23"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "options": {
          "outputPath": "dist",
          "main": "src/index.ts",
          "tsConfig": "tsconfig.lib.json",
          "assets": [
            "src/**/*.json"
          ]
        },
        "configurations": {
          "production": {
            "optimization": true,
            "sourceMap": false,
            "declarationMap": false
          },
          "development": {
            "optimization": false,
            "sourceMap": true,
            "declarationMap": true
          }
        }
      },
      "lint": {
        "executor": "@nx/eslint:eslint",
        "options": {
          "lintFilePatterns": [
            "src/**/*.ts",
            "*.json"
          ]
        }
      },
      "publish": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm publish --access public"
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "options": {
          "jestConfig": "jest.config.js",
          "passWithNoTests": true
        }
      }
    }
  }
}
